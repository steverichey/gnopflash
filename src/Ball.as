package{	import flash.display.Sprite;	import flash.events.Event;		public class Ball extends Sprite	{		public var ballSize:uint;		public var ballColor:uint;		private var ballSprite:Sprite;				public function Ball( bllSz:uint, bllColor:uint = 0x000000 )		{			this.ballSize = bllSz;			this.ballColor = bllColor;						if ( stage )			{				onAddtoStage();			}			else			{				addEventListener( Event.ADDED_TO_STAGE, onAddtoStage, false, 0, true );			}		}				public function onAddtoStage( e:Event = null ):void		{			removeEventListener( Event.ADDED_TO_STAGE, onAddtoStage );						ballSprite = new Sprite();						if ( ballSize == 1 )			{				// "Small" ball size								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 0, 1, 6, 4 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 1, 0, 4, 6 );				ballSprite.graphics.endFill();			}			else if ( ballSize == 2 )			{				// "Normal" ball size								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 1, 1, 8, 8 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 0, 3, 10, 4 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 3, 0, 4, 10 );				ballSprite.graphics.endFill();			}			else if ( ballSize == 3 )			{				// "Large" ball size								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 4, 0, 6, 14 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 0, 4, 14, 6 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 3, 1, 8, 12 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 2, 2, 10, 10 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 1, 3, 12, 8 );				ballSprite.graphics.endFill();			}			else			{				// This is for the serve ball, which indicates who served last.				// This is different from any other ball.								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 1, 1, 6, 6 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 0, 2, 8, 4 );				ballSprite.graphics.endFill();								ballSprite.graphics.beginFill( ballColor );				ballSprite.graphics.drawRect( 2, 0, 4, 8 );				ballSprite.graphics.endFill();			}						addChild( ballSprite );		}	}}