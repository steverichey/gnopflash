package{	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.display.Bitmap;	import flash.display.BitmapData;		public class SplashScreen extends Sprite	{		[Embed(source = "data/splash_fg.png")] private var Splash:Class;		private var splash:Bitmap = new Splash();				[Embed(source = "data/win_fg.png")] private var Win:Class;		private var win:Bitmap = new Win();				[Embed(source = "data/lose_fg.png")] private var Lose:Class;		private var lose:Bitmap = new Lose();				private var isGameOver:Boolean;		private var playerWon:Boolean;				private var shadowBox:Bitmap;		private var shadowBoxData:BitmapData;		private var borderBox:Bitmap;		private var borderBoxData:BitmapData;		private var whiteBox:Bitmap;		private var whiteBoxData:BitmapData;				public function SplashScreen( gameOver:Boolean, playerWin:Boolean )		{			isGameOver = gameOver;			playerWon = playerWin;						if ( stage )			{				onAddtoStage();			}			else			{				addEventListener( Event.ADDED_TO_STAGE, onAddtoStage, false, 0, true );			}		}				public function onAddtoStage( e:Event = null ):void		{			removeEventListener( Event.ADDED_TO_STAGE, onAddtoStage );						shadowBoxData = new BitmapData( 502, 312, false, 0x000000 );			shadowBox = new Bitmap( shadowBoxData, "auto", false );			shadowBox.x = 2;			shadowBox.y = 2;			addChild( shadowBox );						borderBoxData = new BitmapData( 502, 312, false, 0x000000 );			borderBox = new Bitmap( borderBoxData, "auto", false );			addChild( borderBox );						whiteBoxData = new BitmapData( 500, 310, false, 0xFFFFFF );			whiteBox = new Bitmap( whiteBoxData, "auto", false );			whiteBox.x = 1;			whiteBox.y = 1;			addChild( whiteBox );						// All foregrounds are cropped to only the necessary area, so X and Y values differ for each.						if ( !isGameOver )			{				splash.x = 57;				splash.y = 49;				addChild( splash );			}			else			{				if ( playerWon )				{					win.x = 104;					win.y = 62;					addChild( win );				}				else				{					lose.x = 125;					lose.y = 72;					addChild( lose );				}			}		}	}}