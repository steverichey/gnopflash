package{	import flash.display.MovieClip;	import flash.text.TextField;	import flash.events.Event;	import flash.text.AntiAliasType;	import flash.text.TextFormat;	import flash.text.GridFitType;		public class Score extends MovieClip	{		private var scoreDisplay:TextField;		public var scoreValue:Number;				public function Score()		{			if ( stage )			{				onAddtoStage();			}			else			{				addEventListener( Event.ADDED_TO_STAGE, onAddtoStage, false, 0, true );			}		}				public function onAddtoStage( e:Event = null ):void		{			removeEventListener( Event.ADDED_TO_STAGE, onAddtoStage );						scoreValue = 0;						scoreDisplay = new TextField();			scoreDisplay.embedFonts = true;			scoreDisplay.defaultTextFormat = new TextFormat( "chicago", 12, 0x000000, null, null, null, null, null, "left" );			scoreDisplay.x = -3;			scoreDisplay.y = -5;			scoreDisplay.selectable = false;			scoreDisplay.antiAliasType = AntiAliasType.NORMAL;			scoreDisplay.thickness = 0;			scoreDisplay.sharpness = 0;			scoreDisplay.gridFitType = GridFitType.PIXEL;			addChild( scoreDisplay );			scoreDisplay.text = "000";		}				public function updateScore( addValue:Number = 0 ):void		{			// Simply corrects the number to a three-digit string, then updates.			// The original GNOP! used a different font for the scores; I can't tell what it was.						// Acceptable score values are 1 - 99, inclusive, as defined by the "Set Ending Score" dialog.			// If anyone knows what font the original GNOP! uses for scores, please let me know.						scoreValue += addValue;						if ( scoreValue < 10 )			{				scoreDisplay.text = "00" + scoreValue.toString();			}			else if ( scoreValue < 100 )			{				scoreDisplay.text = "0" + scoreValue.toString();			}			else			{				scoreDisplay.text = scoreValue.toString();			}		}	}}